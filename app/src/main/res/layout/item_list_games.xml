<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_list_games_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:padding="2dp"
    android:background="@drawable/back_buttons_ripple_effect">

    <ImageView
        android:id="@+id/img_game"
        android:layout_width="@dimen/item_list_games_image_width"
        android:layout_height="@dimen/item_list_games_image_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/test"/>


    <TextView
        android:id="@+id/txt_rating"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:layout_toStartOf="@+id/img_game"
        android:gravity="right"
        android:padding="2dp"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/font_size_medium"
        tools:text="rating : 4"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/txt_release_date"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_rating"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:padding="2dp"
        android:textColor="@color/gray_text_color"
        android:textSize="@dimen/font_size_small"
        tools:name="2018/10/2"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_rating"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:gravity="right"
        android:padding="2dp"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/font_size_medium"
        tools:name="BATMAN"/>

    <Button
        android:id="@+id/btn_price"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/font_size_small"
        android:background="@drawable/back_list_game_price"
        tools:text=" تومان 455000"
        android:textColor="@color/main_text_color"/>


</RelativeLayout>