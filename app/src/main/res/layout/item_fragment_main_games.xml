<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_fragment_main_games_width"
    android:layout_height="@dimen/item_fragment_main_games_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#888888"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/img_game"
        android:layout_width="@dimen/item_fragment_main_games_width"
        android:layout_height="@dimen/item_fragment_main_games_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/test"
        android:scaleType="fitXY"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:background="#9f000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0sp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"

        >



        <TextView
            android:id="@+id/txt_game_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="3sp"
            android:layout_marginLeft="3sp"
            android:maxLines="2"
            tools:text="دسترسی کامل به پروفایل کاربران و قابلیت حذف و ویرایش تگ های موجود و حذف کاربراندسترسی کامل به پروفایل کاربران و قابلیت حذف و ویرایش تگ های موجود و حذف کاربراندسترسی کامل به پروفایل کاربران و قابلیت حذف و ویرایش تگ های موجود و حذف کاربران"
            android:gravity="center"
            android:padding="1dp"
            android:typeface="serif"
            android:textColor="#fffeff"
            android:textStyle="italic|bold"
            android:textSize="10dp"
            />


    </LinearLayout>

</RelativeLayout>