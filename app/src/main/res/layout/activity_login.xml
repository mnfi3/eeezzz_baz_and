<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ActivityLogin"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >




    <include layout="@layout/toolbar_public"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginBottom="30sp"
                    android:hint="ایمیل"
                    android:textColorHint="@color/main_text_color"
                    android:textColor="@color/main_text_color"
                    android:drawableRight="@drawable/ic_email"
                    android:drawablePadding="16sp"
                    android:inputType=""/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16sp"
                    android:hint="کلمه عبور"
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/main_text_color"
                    android:drawableRight="@drawable/ic_lock"
                    android:drawablePadding="16sp"
                    android:inputType="textPassword"/>


            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:gravity="center"
                android:layout_marginTop="8sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نمایش کلمه عبور"
                    android:layout_marginRight="10sp"
                    android:textColor="@color/main_text_color"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/chk_show_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="24sp"
                    />

            </LinearLayout>




            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="ورود"
                android:layout_marginTop="20sp"
                android:background="@drawable/back_buttons"
                android:textColor="@color/main_text_color"
                />




            <TextView
                android:id="@+id/txt_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="کلمه عبور را فراموش کرده ام"
                android:textStyle="bold"
                android:textColor="@color/main_link_color"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/txt_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:text="ایجاد حساب کاربری"
                android:textColor="@color/main_link_color"
                android:textSize="15sp"
                android:padding="4dp"/>

            <ProgressBar
                style="@style/AppTheme"
                android:id="@+id/prg_login"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                />










        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</LinearLayout>