<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ActivityLogin"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >




    <include layout="@layout/toolbar_public"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <EditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:drawablePadding="16sp"
                    android:hint="نام"
                    android:inputType=""
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/main_text_color"
                    android:textSize="@dimen/font_size_medium"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <EditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:drawablePadding="16sp"
                    android:hint="نام خانوادگی"
                    android:inputType=""
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/main_text_color"
                    android:textSize="@dimen/font_size_medium"
                    />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <EditText
                    android:id="@+id/edt_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:drawablePadding="16sp"
                    android:hint="شماره موبایل"
                    android:inputType="phone"
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/main_text_color"
                    android:textSize="@dimen/font_size_medium"
                    />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <EditText
                    android:id="@+id/edt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:drawablePadding="16sp"
                    android:hint="نام کاربری"
                    android:inputType=""
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/main_text_color"
                    android:textSize="@dimen/font_size_medium"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:drawablePadding="16sp"
                    android:hint="ایمیل"
                    android:inputType=""
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/main_text_color"
                    android:textSize="@dimen/font_size_medium"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16sp"
                    android:drawablePadding="16sp"
                    android:hint="کلمه عبور"
                    android:inputType="textPassword"
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/main_text_color"
                    android:textSize="@dimen/font_size_medium"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_re_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16sp"
                    android:drawablePadding="16sp"
                    android:hint="تکرار کلمه عبور"
                    android:inputType="textPassword"
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/main_text_color"
                    android:textSize="@dimen/font_size_medium"/>


            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:layout_marginTop="8sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:text="نمایش کلمه عبور"
                    android:textColor="@color/main_text_color"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/chk_show_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="24sp"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/btn_register"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/back_buttons"
                android:text="ثبت نام"
                android:textColor="@color/main_text_color"
                />


            <ProgressBar
                android:id="@+id/prg_register"
                style="@style/AppTheme"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:visibility="invisible"
                />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</LinearLayout>